<%- include("partials/header") %>

<div class="container">
  <div class="row mt-4">
    <div class="col-6 show_image-container">
      <img src="<%= restaurant.image_link %>" alt="" />
    </div>
    <div class="col-6 show_details-container">
      <h1><%= restaurant.title %></h1>
      <p><%= restaurant.description %></p>

      <table class="table">
        <tbody>
          <tr>
            <th scope="row">Starting Date</th>
            <td><%= restaurant.date %></td>
          </tr>
          <tr>
            <th scope="row">Cuisine</th>
            <td><%= restaurant.cuisine %></td>
          </tr>
          <tr>
            <th scope="row">Famous Dishes</th>
            <td><%= restaurant.fdish %></td>
          </tr>
          <tr>
            <th scope="row">Opening Time</th>
            <td><%= restaurant.otime %></td>
          </tr>
          <tr>
            <th scope="row">Closing Time</th>
            <td><%= restaurant.ctime %></td>
          </tr>
          <tr>
            <th scope="row">Delivery?</th>
            <td><%= restaurant.delivery %></td>
          </tr>
        </tbody>
      </table>
      <a href="/restaurants/<%= restaurant._id%>/edit">
        <button class="btn btn-outline-info btn-lg btn-block mb-2">Edit</button>
      </a>
      <form
        action="/restaurants/<%= restaurant._id%>?_method=Delete"
        method="post"
      >
        <button type="submit" class="btn btn-outline-danger btn-lg btn-block">
          Delete
        </button>
      </form>
    </div>
  </div>
  <div class="row show_comment-header mt-3">COMMENT HEADER</div>

  <% comment.forEach((comment => { %>
  <div class="row show_comment-container py-2">
    <div class="col-3"><%= comment.user %></div>
    <div class="col-9"><%= comment.text %></div>
  </div>
  <%}))%>
</div>

<%- include("partials/footer") %>
