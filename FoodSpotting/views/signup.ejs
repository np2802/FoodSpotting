<%- include('partials/header') %>
<div style="	background-color: white;
max-width: 340px;
margin: 0 auto;
position: relative;
top: 80px;
padding-bottom: 30px;
border-radius: 5px;
box-shadow: 0 5px 50px rgba(0,0,0,0.4);
text-align: center;">
	<div style="	background-color: #665851;
	margin-top: 0;
	border-radius: 5px 5px 0 0;">
		<h2 style="	text-transform: uppercase;
		color: white;
		font-weight: 400;
		letter-spacing: 1px;
		font-size: 1.4em;
		line-height: 2.8em;">Log In</h2>
	</div>
<form action="/signup" method="POST">
	<label style="font-weight: 700;
	font-size: .8em;
	color: #888;
	letter-spacing: 1px;
	text-transform: uppercase;
	line-height: 2em;" for="email">Email</label>
	<br/>
	<input style="	margin-bottom: 20px;
	padding: 8px;
	border: 1px solid #ccc;
	border-radius: 2px;
	font-size: .9em;
	color: #888;
	outline: none;
border-color: #665851;
transition: 0.5s;
color: #665851;" type="email" name="email" >
</br>
	<label style="font-weight: 700;
	font-size: .8em;
	color: #888;
	letter-spacing: 1px;
	text-transform: uppercase;
	line-height: 2em;" for="username">Username</label>
	<br/>
	<input style="	margin-bottom: 20px;
	padding: 8px;
	border: 1px solid #ccc;
	border-radius: 2px;
	font-size: .9em;
	color: #888;
	outline: none;
border-color: #665851;
transition: 0.5s;
color: #665851;" type="text" name="username" >
</br>
<label style="font-weight: 700;
font-size: .8em;
color: #888;
letter-spacing: 1px;
text-transform: uppercase;
line-height: 2em;" for="password">Password</label>
<br/>
	<input style="	margin-bottom: 20px;
	padding: 8px;
	border: 1px solid #ccc;
	border-radius: 2px;
	font-size: .9em;
	color: #888;
	outline: none;
border-color: #665851;
transition: 0.5s;
color: #665851;" type="password" name="password">
<br/>
	<button style="	margin-top: 0px;
	border: 0;
	border-radius: 2px;
	color: white;
	padding: 10px;
	text-transform: uppercase;
	font-weight: 400;
	font-size: 0.7em;
	letter-spacing: 1px;
	background-color: #665851;
	cursor:pointer;
	outline: none;" type="submit">
		Sign Up
	</button>
</form>
</div>

<%- include('partials/footer') %>